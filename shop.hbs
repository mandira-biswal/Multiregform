    max-width: 300px;
}

/* Hover effect for card */
.card:hover {
    transform: translateY(-10px); /* Lift the card on hover */
    box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.2); /* Add a shadow on hover */
}

/* Animated card */
.animated-card {
    animation: fadeInUp 1s ease-in-out;
}

/* Animation for cards */
@keyframes fadeInUp {
    0% {
